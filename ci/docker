#!/bin/bash -eux
# This script gets run inside the itest Docker containers.
set -o pipefail

# We need to set standard /tmp permissions since it's a Docker volume.
chmod 1777 /tmp

apt-get update
apt-get install -y --no-install-recommends \
    bash \
    build-essential \
    ca-certificates \
    curl \
    gdebi-core \
    python3-dev \
    zsh

curl https://bootstrap.pypa.io/pip/3.6/get-pip.py | python3
gdebi -n /mnt/dist/*.deb

# pip & pytest can't deal with a read-only filesystem
cp -r /mnt /tmp/test
pip install -r /tmp/test/requirements-dev.txt
pip install /tmp/test
pytest -vv /tmp/test
